<%= render(:template => 'res/header') %>

<%= render(:template => 'res/menu') %>

<div class="container">
	<div class="row my-5">
		<div class="col-12">
			<h2 class="text-center">
				<%=Lang.get("Paskyra", cookies)%>
			</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-6 paskyra-info">
			<div>
				<div class="paskyra-pav"><%=Lang.get("Login_Name", cookies)%>:</div>
				<%=@user[:name]%>
			</div>
			<div>
				<form action="" method="post">
					<div class="paskyra-pav"><%=Lang.get("FirstName", cookies)%>:</div>
					<input type="text"
						   name="fname" 
						   maxlength="32"
						   onkeyup="UserDataChange(this)"
						   value="<%=@user_contacts[:fname]%>" />
					<input class="btn btn-dark btn-sm"
								   type="submit" 
								   name="ok_fname" 
								   value="OK" />
				</form>
			</div>
			<div>
				<form action="" method="post">
					<div class="paskyra-pav"><%=Lang.get("LastName", cookies)%>:</div>
					<input type="text" 
						   name="lname" 
						   maxlength="32"
						   onkeyup="UserDataChange(this)"
						   value="<%=@user_contacts[:lname]%>" />
					<input class="btn btn-dark btn-sm"
								   type="submit" 
								   name="ok_lname" 
								   value="OK" />
				</form>
			</div>
			<div>
				<form action="" method="post">
					<div class="paskyra-pav"><%=Lang.get("Email", cookies)%>:</div>
					<input type="text" 
						   name="email" 
						   maxlength="32"
						   onkeyup="UserDataChange(this)"
						   value="<%=@user_contacts[:email]%>" />
					<input class="btn btn-dark btn-sm"
								   type="submit" 
								   name="ok_email" 
								   value="OK" />
				</form>
			</div>
			<div>
				<form action="" method="post">
					<div class="paskyra-pav"><%=Lang.get("Phone", cookies)%>:</div>
					<input type="text" 
						   name="phone" 
						   maxlength="9"
						   onkeyup="UserDataChange(this)"
						   value="<%=@user_contacts[:phone]%>"
						   onkeypress="return (event.charCode >= 48 && event.charCode <= 57) || (event.charCode >= 0 && event.charCode < 10)"
						   onpaste="event.preventDefault()" />
					<input class="btn btn-dark btn-sm"
								   type="submit" 
								   name="ok_phone" 
								   value="OK" />
				</form>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-6">
			<div class="prisijungimas">
				<form action="" method="post">
					<div>
						<%=Lang.get("ChangeUserLoginName", cookies)%>
						<hr>
					</div>
					<div>
						<input type="text" 
							   name="name" 
							   maxlength="32"
							   placeholder="<%=Lang.get("Name", cookies)%>" />
					</div>
					<div>
						<input type="password" 
							   name="pass" 
							   autocomplete="new-password" 
							   spellcheck="false" 
							   novalidate="novalidate" 
							   maxlength="256"
							   placeholder="<%=Lang.get("Password", cookies)%>" />
					</div>
					<div class="text-right">
						<input class="btn btn-dark"
							   type="submit" 
							   name="user_name" 
							   value="<%=Lang.get("Confirm", cookies)%>" />
					</div>
					<div><%=@info_name.html_safe%></div>
				</form>
			</div>
		</div>
		<div class="col-6">
			<div class="prisijungimas">
				<form action="" method="post">
					<div>
						<%=Lang.get("ChangeUserPassword", cookies)%>
						<hr>
					</div>
					<div>
						<input type="password" 
							   name="old-pass" 
							   autocomplete="new-password" 
							   spellcheck="false" 
							   novalidate="novalidate" 
							   maxlength="256"
							   placeholder="<%=Lang.get("OldPassword", cookies)%>" />
					</div>
					<div>
						<input type="password" 
							   name="pass1" 
							   autocomplete="new-password" 
							   spellcheck="false" 
							   novalidate="novalidate" 
							   maxlength="256"
							   placeholder="<%=Lang.get("NewPassword", cookies)%>" />
					</div>
					<div>
						<input type="password" 
							   name="pass2" 
							   autocomplete="new-password" 
							   spellcheck="false" 
							   novalidate="novalidate" 
							   maxlength="256"
							   placeholder="<%=Lang.get("ConfirmPassword", cookies)%>" />
					</div>
					<div class="text-right">
						<input class="btn btn-dark"
							   type="submit" 
							   name="user_pass" 
							   value="<%=Lang.get("Confirm", cookies)%>" />
					</div>
					<div><%=@info_pass.html_safe%></div>
				</form>
			</div>
		</div>
	</div>
</div>